<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/repo_list_item_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repo_list_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="name"
        app:layout_constraintStart_toStartOf="@+id/repo_list_item_id_tv"
        app:layout_constraintTop_toBottomOf="@+id/repo_list_item_id_tv" />

    <TextView
        android:id="@+id/repo_list_item_owner_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="owner login"
        app:layout_constraintStart_toStartOf="@+id/repo_list_item_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/repo_list_item_name_tv" />

    <TextView
        android:id="@+id/repo_list_item_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="description"
        app:layout_constraintStart_toStartOf="@+id/repo_list_item_owner_tv"
        app:layout_constraintTop_toBottomOf="@+id/repo_list_item_owner_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>