<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repo_list_card_view"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/repo_list_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Id:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/repo_list_item_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/repo_list_item_name_tv" />

        <TextView
            android:id="@+id/repo_list_item_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="id"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/repo_list_item_id"
            app:layout_constraintTop_toTopOf="@+id/repo_list_item_id" />

        <TextView
            android:id="@+id/repo_list_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textStyle="bold"
            android:textColor="@color/github_name"
            android:textSize="22sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/repo_list_item_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Login:"
            android:textSize="16sp"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/repo_list_item_id"
            app:layout_constraintTop_toBottomOf="@+id/repo_list_item_id" />

        <TextView
            android:id="@+id/repo_list_item_owner_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="owner login"
            android:textSize="16sp"

            app:layout_constraintStart_toEndOf="@+id/repo_list_item_owner"
            app:layout_constraintTop_toTopOf="@+id/repo_list_item_owner" />

        <TextView
            android:id="@+id/repo_list_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description:"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="@+id/repo_list_item_owner"
            app:layout_constraintTop_toBottomOf="@+id/repo_list_item_owner" />

        <TextView
            android:id="@+id/repo_list_item_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="description"
            app:layout_constraintStart_toEndOf="@+id/repo_list_item_desc"
            app:layout_constraintTop_toBottomOf="@+id/repo_list_item_owner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
